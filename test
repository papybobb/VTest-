<script>
    console.log('üöÄ Script de test d√©marr√©');
    
    // Test 1: JavaScript fonctionne
    document.getElementById('jsTest').innerHTML = `
        <h3>‚úÖ JavaScript fonctionne</h3>
        <p>Le script s'ex√©cute correctement.</p>
    `;
    document.getElementById('jsTest').className = 'test-box success';
    
    // Test 2: Charger les produits
    const products = [
        {
            name: 'üçï Pizza Margherita',
            price: '12‚Ç¨',
            image: 'https://images.unsplash.com/photo-1574071318508-1cdbab80d002?w=400'
        },
        {
            name: 'üçî Burger Deluxe',
            price: '15‚Ç¨',
